<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5sp"
        android:layout_margin="5sp"
        android:background="#fff">
        <RelativeLayout
            android:layout_width="160sp"
            android:layout_height="165sp"
            android:background="#fff">
            <ImageView
                android:id="@+id/nearbycardimage"
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:scaleType="centerCrop"
                android:src="#555" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nearbycardtitle"
                android:layout_below="@id/nearbycardimage"
                android:text="Mahabalipuram"
                android:textColor="#000"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginBottom="3sp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nearbycardrating"
                    android:text="4.5"
                    android:textColor="#000"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nearbycarddistance"
                    android:layout_alignParentEnd="true"
                    android:text="100.7 KM"
                    android:textColor="#000"
                    android:textSize="10sp"/>
            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>