<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140sp"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="#fff"
    app:cardCornerRadius="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <ImageView
            android:id="@+id/recommendedcardimage"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:scaleType="centerCrop"
            android:src="#555" />

        <TextView
            android:id="@+id/recommendedcardtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recommendedcardimage"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="5sp"
            android:lines="1"
            android:text="Mahabalipuram"
            android:textColor="#000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recommendedcardtitle"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="3sp">

            <TextView
                android:id="@+id/recommendedcardrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star_black_24dp"
                android:text="4.5"
                android:textColor="#000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/recommendedcarddistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawableLeft="@drawable/ic_near_me_black_24dp"
                android:text="100.7 KM"
                android:textColor="#000"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>